@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

!define SMART_HOME "Управление системой дома"
title Контекстная диаграмма "Умный дом"

top to bottom direction

!includeurl https://raw.githubusercontent.com/RicardoNiepel/C4-PlantUML/master/C4_Component.puml

Person(owner, "Владелец жилья", "Человек, использующий систему управления домом")
Person(technician, "Мастер", "Специалист, устанавливающий и настраивающий оборудование")
System(control_system, SMART_HOME, "Центральная система управления отоплением и температурой")
System_Ext(temp_sensor, "Датчик температуры", "Устройство, фиксирующее температуру внутри дома")
System_Ext(heating_device, "Отопительное устройство", "Умное устройство для обогрева дома")
System_Ext(app, "Мобильное приложение / Веб-сайт", "Приложение для взаимодействия с системой")

Rel(owner, app, "Взаимодействует через интерфейс для управления устройствами и просмотра данных", "HTTP")
Rel(app, control_system, "Отправляет команды и получает данные о текущем состоянии", "HTTP")
Rel(owner, control_system, "Управляет устройствами и отслеживает данные о температуре", "HTTP")
Rel(technician, control_system, "Устанавливает и настраивает оборудование", "HTTP")
Rel(temp_sensor, control_system, "Отправляет данные о текущей температуре", "HTTP")
Rel(control_system, heating_device, "Передаёт команды для регулировки отопления", "HTTP")

@enduml
